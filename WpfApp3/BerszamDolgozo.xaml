        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MunkaÓra Nyilvántartása" Height="450" Width="800" Background="#FF111BFF" ResizeMode="NoResize">
