        </Label>
        <TextBox x:Name="szjaText" HorizontalAlignment="Left" Height="23" Margin="98,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Grid.Column="1"/>
